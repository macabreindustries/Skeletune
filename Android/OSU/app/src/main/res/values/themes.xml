<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OSU" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colores Primarios -->
        <item name="colorPrimary">@color/accent_cyan</item>
        <item name="colorPrimaryVariant">@color/accent_cyan_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Colores Secundarios -->
        <item name="colorSecondary">@color/accent_gold</item>
        <item name="colorSecondaryVariant">@color/accent_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Color de Fondo -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorSurface">@color/app_surface</item>
        
        <!-- Barra de Estado -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.OSU" parent="Base.Theme.OSU" />

    <!-- Estilos para la pantalla de resultados -->
    <style name="ResultLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ResultValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>