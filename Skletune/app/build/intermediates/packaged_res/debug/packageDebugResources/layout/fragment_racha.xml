<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_titulo_racha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu Racha de PrÃ¡ctica"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="90dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/button_close_modal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:tint="#000000"
            />
    </RelativeLayout>

    <!-- TARJETA DE ESTADÃSTICAS -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#2C2C2E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Racha Actual"
                        android:textSize="14sp"
                        android:textColor="#BDBDBD"/>

                    <TextView
                        android:id="@+id/text_racha_actual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40"
                        tools:text="40"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dÃ­as"
                        android:textSize="14sp"
                        android:textColor="#BDBDBD"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#4A4A4A"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mejor Racha"
                        android:textSize="14sp"
                        android:textColor="#BDBDBD"/>

                    <TextView
                        android:id="@+id/text_racha_mejor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52"
                        tools:text="52"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dÃ­as"
                        android:textSize="14sp"
                        android:textColor="#BDBDBD"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4A4A4A"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- TOTAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total de dÃ­as practicados"
                    android:textSize="14sp"
                    android:textColor="#BDBDBD"/>

                <TextView
                    android:id="@+id/text_total_dias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="127 dÃ­as"
                    tools:text="127 dÃ­as"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_banner_notificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#E0F8E0">

        <TextView
            android:id="@+id/text_banner_notificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="ðŸŽ‰ Â¡IncreÃ­ble! EstÃ¡s a solo 12 dÃ­as de tu mejor racha."
            tools:text="ðŸŽ‰ Â¡IncreÃ­ble! EstÃ¡s a solo 12 dÃ­as de tu mejor racha."
            android:textSize="18sp"
            android:textColor="#000000"
            android:drawablePadding="8dp" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_titulo_historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial del Mes"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

    <!-- CALENDARIO -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_layout_calendario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:columnCount="7">

        <!-- ENCABEZADOS -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_columnWeight="1"
            android:text="L"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_columnWeight="1"
            android:text="M"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_columnWeight="1"
            android:text="M"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_columnWeight="1"
            android:text="J"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_columnWeight="1"
            android:text="V"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_columnWeight="1"
            android:text="S"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_columnWeight="1"
            android:text="D"
            android:textStyle="bold"
            android:textColor="#757575"/>
    </androidx.gridlayout.widget.GridLayout>

    <!-- LEYENDA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- COMPLETADO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#4CAF50"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Completado"
                android:layout_marginTop="-4dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- PERDIDO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#E57373"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="  Perdido"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- FUTURO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#BDBDBD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Futuro"
                android:layout_marginTop="-4dp"
                android:textColor="#000000"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
