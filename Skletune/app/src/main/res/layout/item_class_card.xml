<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="8dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/image_instructor_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_instructor_avatar"
        android:contentDescription="Avatar instructor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/text_instructor_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Carlo Mendez"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_instructor_avatar"
        app:layout_constraintTop_toTopOf="@id/image_instructor_avatar"
        app:layout_constraintEnd_toStartOf="@id/button_clase_menu"
        android:layout_marginStart="12dp"
        tools:text="Carlo Mendez"/>

    <TextView
        android:id="@+id/text_clase_materia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Violín"
        android:textSize="14sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/text_instructor_nombre"
        app:layout_constraintTop_toBottomOf="@id/text_instructor_nombre"
        app:layout_constraintEnd_toStartOf="@id/text_clase_horario"
        android:layout_marginTop="4dp"
        tools:text="Violín"/>

    <TextView
        android:id="@+id/text_clase_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="6dp"
        android:text="Mar 10:30"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:textColor="#757575"
        app:layout_constraintEnd_toStartOf="@id/button_clase_menu"
        app:layout_constraintTop_toTopOf="@id/text_instructor_nombre"
        android:layout_marginEnd="8dp"
        tools:text="Mar 10:30"/>

    <TextView
        android:id="@+id/text_clase_duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_hour"
        android:drawablePadding="6dp"
        android:layout_marginTop="8dp"
        android:text="60 min"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintEnd_toStartOf="@id/button_clase_menu"
        app:layout_constraintTop_toBottomOf="@id/text_clase_horario"
        android:layout_marginEnd="8dp"
        tools:text="60 min"/>

    <ImageButton
        android:id="@+id/button_clase_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_morevert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu clase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
