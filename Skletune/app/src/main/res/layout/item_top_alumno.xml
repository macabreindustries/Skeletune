<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/image_alumno_avatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_alumno"
        android:contentDescription="Avatar alumno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/text_alumno_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Elynn Lee"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_alumno_avatar"
        app:layout_constraintTop_toTopOf="@id/image_alumno_avatar"
        app:layout_constraintEnd_toStartOf="@id/text_alumno_ranking"
        android:layout_marginStart="12dp"
        tools:text="Elynn Lee"/>

    <TextView
        android:id="@+id/text_alumno_detalles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Piano • 8410 pts"
        android:textSize="14sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/text_alumno_nombre"
        app:layout_constraintTop_toBottomOf="@id/text_alumno_nombre"
        app:layout_constraintEnd_toStartOf="@id/text_alumno_ranking"
        android:layout_marginTop="4dp"
        tools:text="Piano • 8410 pts"/>

    <TextView
        android:id="@+id/text_alumno_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 1"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="#656060"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Top 1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
