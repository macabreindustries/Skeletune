<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#000000"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido"
            android:textSize="35sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Profesor"
            android:textColor="#A1A1A1"
            android:textSize="25sp"/>
    </LinearLayout>


    <!-- TARJETA 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_songs"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@id/card_history"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iv_songs_icon"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:contentDescription="@string/canciones"
                android:src="@drawable/favorite_icon" />

            <TextView
                android:id="@+id/tv_songs_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/canciones"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- TARJETA 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_history"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@id/card_songs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iv_history_icon"
                android:layout_width="44dp"
                android:layout_height="37dp"
                android:contentDescription="@string/historial"
                android:src="@drawable/alumno_icon" />

            <TextView
                android:id="@+id/tv_history_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alumnos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:textColor="#111111" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- CARRUSEL -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_carousel"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/borde_placeholder"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/card_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_carousel_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        app:tabIndicator="@null"
        app:layout_constraintTop_toBottomOf="@id/vp_carousel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>


    <!-- ❗ CORRECCIÓN REALIZADA -->
    <!-- ❗ Antes tenías dos tarjetas ("card" y "card_streak") encima una de otra.
         Eliminé la duplicada ("card") porque card_streak ya contiene toda la sección correcta. -->
    <!-- SOLO QUEDÓ ESTA: -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_streak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tab_carousel_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- SECCIÓN mejores alumnos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_placeholder"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_best_students_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mejores alumnos"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>


            <LinearLayout
                android:id="@+id/ll_best_students"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginTop="8dp">

                <!-- Alumno 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_student_1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_profile"
                        android:contentDescription="Alumno 1"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_student_1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Jesus"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Alumno 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_student_2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_profile"
                        android:contentDescription="Alumno 2"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_student_2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luis uziel"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Alumno 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_student_3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_profile"
                        android:contentDescription="Alumno 3"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_student_3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aldo Yahir"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!-- BOTÓN FLOTANTE -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/assistant"
        android:src="@drawable/assitant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
