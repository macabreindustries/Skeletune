<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_home_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la sección -->
        <TextView
            android:id="@+id/tv_teacher_stats_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadísticas de Alumnos"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:fontFamily="cursive"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <!-- Tarjetas de los mejores alumnos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle"

            android:dividerPadding="12dp">

            <!-- Alumno 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Foto del alumno -->
                    <ImageView
                        android:id="@+id/iv_student_1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_alumno"
                        android:contentDescription="Foto Alumno"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"/>

                    <!-- Información del alumno -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_student_1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elynn Lee"

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/tv_student_1_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="elynn.lee@example.com"
                            android:textSize="12sp"
                            android:textColor="#828282"/>

                        <TextView
                            android:id="@+id/tv_student_1_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4520 pts"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>

                        <!-- Mini tarjetas de minijuegos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp">

                                <TextView
                                    android:id="@+id/tv_student_1_game1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Minijuego 1:"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/tv_student_1_game2"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:text="Minijuego 2:"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <!-- Alumno 2 y 3 se pueden copiar exactamente igual cambiando IDs -->
            <!-- ... -->

            <!-- Alumno 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Foto del alumno -->
                    <ImageView
                        android:id="@+id/iv_student_2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_alumno"
                        android:contentDescription="Foto Alumno"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"/>

                    <!-- Información del alumno -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_student_2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elynn Lee"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/tv_student_2_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="elynn.lee@example.com"
                            android:textSize="12sp"
                            android:textColor="#828282"/>

                        <TextView
                            android:id="@+id/tv_student_2_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4520 pts"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>

                        <!-- Mini tarjetas de minijuegos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp">

                                <TextView
                                    android:id="@+id/tv_student_2_game1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Minijuego 1:"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/tv_student_2_game2"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:text="Minijuego 2:"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Alumno 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <!-- Foto del alumno -->
                    <ImageView
                        android:id="@+id/iv_student_3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_alumno"
                        android:contentDescription="Foto Alumno"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"/>

                    <!-- Información del alumno -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_student_3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elynn Lee"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/tv_student_3_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="elynn.lee@example.com"
                            android:textSize="12sp"
                            android:textColor="#828282"/>

                        <TextView
                            android:id="@+id/tv_student_3_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4520 pts"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>

                        <!-- Mini tarjetas de minijuegos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_student_3_game1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minijuego 1:"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/tv_student_3_game2"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:text="Minijuego 2:"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Gráfica de barras -->
        <RelativeLayout
            android:id="@+id/chart_container"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/borde_placeholder">
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
